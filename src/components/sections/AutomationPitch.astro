---
import ContainerWithBorder from '../atoms/ContainerWithBorder.astro'
import DoubleSectionHeading from '../atoms/DoubleSectionHeading.astro'
import ImageWithDynamicallyImportedSrc from '../atoms/ImageWithDynamicallyImportedSrc.astro'
import ProgressCircle from '../atoms/ProgressCircle.astro'
import SectionSubtitle from '../atoms/SectionSubtitle.astro'
import TextWithTitleAndIcon from '../atoms/TextWithTitleAndIcon.astro'
const problems = [
  {
    title: 'Missed Revenue Opportunities',
    description:
      'Delayed responses to tenders/clients can lead to missing contracts.',
    percentage: 15,
  },
  {
    title: 'Revenue Tied Up In Delays',
    description:
      'Project delays from manual processes slow down cash flow and payments.',
    percentage: 30,
  },

  {
    title: 'Project Overruns',
    description:
      'Manual tracking of project timelines can lead to delays, resulting in an increase in budget overruns.',
    percentage: 60,
  },
]
const solutions = [
  {
    title: 'Increased Efficiency',
    description:
      'Automation eliminates repetitive, manual tasks, allowing you and your team to focus on higher-value work.',
    percentage: 50,
  },
  {
    title: 'Improved Scalability',
    description:
      'As your business grows, automation scales with you, enabling you to handle increased workloads. Allowing you to manage up to 60% more projects with the same team size.',
    percentage: 60,
  },
  {
    title: 'Revenue Growth',
    description:
      'Automate bid preparation, response tracking, and reporting to win more tenders, driving additional revenue annually.',
    percentage: 45,
  },
]
---

<script>
  import { sectionScrollAnimation, showCtaOnScroll } from '../../gsapAnimations'
  sectionScrollAnimation('pitch', 'pitch-animation')
  showCtaOnScroll('pitch')
</script>

<main
  id="pitch"
  class="flex flex-col justify-center items-center min-h-screen h-fit px-2 pt-28 pitch"
>
  <DoubleSectionHeading
    accentHeading="WHY AUTOMATE"
    mainHeading="We transform Businesses"
    animationClass="pitch-animation"
  />
  <SectionSubtitle animationClass="pitch-animation">
    Automated workflows & AI tooling dramatically improve business processes and
    give you time back to focus on what you do best.
  </SectionSubtitle>

  <ContainerWithBorder
    classes={[
      'flex flex-col items-center w-full xl:w-10/12 gap-3 p-4 max-h-fit pitch-animation border-none bg-transparent',
    ]}
  >
    <div
      class="flex flex-col justify-evenly items-start mb-6 xl:flex-row w-full"
    >
      {
        solutions.map(({ percentage, title, description }, index) => (
          <div class="flex flex-col items-center justify-start gap-2 w-full px-2 min-h-40">
            <ProgressCircle percentage={percentage} index={index} size={1.5} />
            <div class="max-w-80">
              <h1 class="text-center text-2xl font-bold mb-4">
                {title.toUpperCase()}
              </h1>
              <p class="text-md text-gray-400 mt-2">{description}</p>
            </div>
          </div>
        ))
      }
    </div>
  </ContainerWithBorder>
  {
    /*  <div
      class="flex flex-col justify-start w-full items-center lg:w-5/12 gap-6"
    >
      <div class="flex flex-col items-start justify-start gap-6 w-9/12">
        
          problems.map(({ title }) => (
            <div class="flex justify-center items-start gap-6">
              <ImageWithDynamicallyImportedSrc
                imageName={'cross.png'}
                alt={'challenge'}
                width={40}
                height={40}
              />
              <p class="text-[1.5rem] text-gray-400 mt-1 tracking-wider">
                {title.toUpperCase()}
              </p>
            </div>
          ))
        }
        {
          /*problems.map(({ title, description }) => (
            <TextWithTitleAndIcon
              useImageWithDynamicallyImportedSrc
              icon="cross.png"
              title={title}
              description={description}
              classes={['w-full mt-4 md:mt-0 min-h-56 p-4 pitch-animation']}
            />
          ))
          <span class="text-sm text-gray-500 italic mt-2 pitch-animation">
      Derived from industry research and real-world data.</span
    >*/
