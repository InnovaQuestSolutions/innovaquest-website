---
import SectionHeading from './SectionHeading.astro'
interface Props {
  accentHeading: string
  mainHeading: string
  animationClass?: string
}

const { accentHeading, mainHeading, animationClass } = Astro.props
---

<div class="flex flex-col gap-6">
  <h1
    class:list={[
      'text-sm font-bold text-white text-center tracking-wider',
      animationClass ?? '',
    ]}
  >
    {accentHeading}
  </h1>
  <SectionHeading animationClass={animationClass ?? ''}>
    {mainHeading}
  </SectionHeading>
</div>
