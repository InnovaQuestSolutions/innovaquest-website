---
interface Props {
  title: string
  description: string
  classes: string[]
  index?: number
}

const { title, description, index, classes } = Astro.props
---

<div
  class:list={[
    'flex items-start p-4 m-2 max-w-72 w-72 h-1/3 rounded-lg bg-black bg-opacity-30 border border-gray-700 backdrop-blur-sm',
    classes && [...classes],
  ]}
>
  {
    typeof index == 'number' && (
      <p class="text-1xl md:text-3xl p-4 font-bold tracking-widest rounded-sm border border-gray-700">
        0{index + 1}
      </p>
    )
  }
  <div class="mx-6">
    <h1 class="text-[1.3rem] font-bold subtitle">{title}</h1>
    <p class="text-md text-gray-400 mt-4">{description}</p>
  </div>
</div>
