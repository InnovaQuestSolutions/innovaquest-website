---
interface Props {
  title: string
  description: string
  classes: string[]
  index?: number
}

const { title, description, index, classes } = Astro.props
---

<div
  class:list={[
    'flex flex-col gap-3 items-start rounded-lg ',
    classes && [...classes],
  ]}
>
  {
    typeof index == 'number' && (
      <div class="flex justify-between items-center gap-4">
        <p class="text-5xl font-bold text-gray-600 tracking-wider">
          0{index + 1}
        </p>
      </div>
    )
  }

  <div class="flex flex-col justify-evenly items-start gap-3">
    <h1 class="text-2xl font-bold">{title.toUpperCase()}</h1>
    <p class="text-md text-gray-400 mt-4">{description}</p>
  </div>
</div>
