---
import ImageWithDynamicallyImportedSrc from './ImageWithDynamicallyImportedSrc.astro'

interface Props {
  index: number
  founderInfo: {
    image: string
    name: string
    credentials: string[]
    humanisingAspect: string
  }
}

const {
  index,
  founderInfo: { image, name, credentials, humanisingAspect },
} = Astro.props
---

<div
  class:list={[
    'flex  w-full lg:max-w-xl p-6 gap-6 rounded-lg bg-black bg-opacity-30 border border-gray-700 about-animation backdrop-blur-sm',
    `${index === 1 ? 'mt-12 flex-row-reverse' : 'self-end'}`,
  ]}
>
  <ImageWithDynamicallyImportedSrc
    imageName={image}
    alt="founders"
    width={100}
    classes="rounded-full max-w-[100px] max-h-[100px]"
  />
  <div class="flex-col items-start">
    <h1 class="text-[1rem] font-bold subtitle">{name}</h1>
    <h1 class="text-[1rem] font-bold flex flex-wrap gap-1">
      {
        credentials.map((cred, index) => (
          <span class="font-thin">
            {index !== 0 && '|'}
            {cred}
          </span>
        ))
      }
    </h1>
    <p class="text-gray-400 mt-2">{humanisingAspect}</p>
  </div>
</div>
